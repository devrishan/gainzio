<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gainzio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gainzio_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/gainzio_bg</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/gainzio_bg</item>
    </style>

    <style name="Theme.Gainzio.Splash" parent="Theme.Gainzio">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
</resources>
