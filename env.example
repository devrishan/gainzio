# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_ACCESS_TOKEN_SECRET=replace-with-32-char-secret
JWT_REFRESH_TOKEN_SECRET=replace-with-32-char-secret
JWT_ACCESS_TOKEN_TTL_SECONDS=900
JWT_REFRESH_TOKEN_TTL_SECONDS=2592000

# Legacy JWT (for backward compatibility)
JWT_SECRET=replace-with-32-char-secret
